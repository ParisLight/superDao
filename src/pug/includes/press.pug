section.press
    .press-title
        h2.second-title Press
        .press__stars 
            img(src="/images/press_stars.svg", alt="stars")
    .cards-all
        span See all 
        .cards-arrow
            img(src="images/grey-arrow.svg", alt="arrow")
    .cards-list
        each podcatsItem in podcastsList
            +card(podcatsItem.logoUrl, podcatsItem.title, podcatsItem. descr, podcatsItem.link, podcatsItem.linkText, podcatsItem.background, podcatsItem.textColor)
