- 
    var podcastsList = [
        {
            logoUrl: 'images/pres-ic-1.svg',
            title: 'Understanding DAOs with Yury Lifshits', 
            descr: 'The Pomp Podcast <br> by Anthony Pompliano', 
            link: '#', 
            linkText: 'Read',
            background: '#77E6FF',
            textColor: '#10151A'
        }, 
        {
            logoUrl: 'images/pres-ic-2.svg', 
            title: 'Everything You Need to Know About DAOs with Yury Lifshits from Superdao', 
            descr: 'The Unstoppable Podcastby Josh Gordon', 
            link: '#', 
            linkText: 'Read',  
            background: '#E2C1F9', 
            textColor: '#10151A'
        }, 
        {
