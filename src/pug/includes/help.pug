- var persons = ['person-1', 'person-2', 'person-3', 'person-4', 'person-5'];
- var steps = ['Success managers', 'Knowledge base', 'Chat support', 'Tutorials', 'Templates', 'Smart Contract development', 'Events', 'Education', 'Guides'];

section.help
    .help__title 
        h2.second-title Help at every step
    .help__team-list
        each person in persons
            .help__person-img
                img(src=`images/${person}.png`, alt="person")
    .help__steps-list
        each step in steps
            .help__step
                .help__step-star
                span.help__step-text #{step}